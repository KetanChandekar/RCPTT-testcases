------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-tab-folder -index 2] {
    get-property "pages[0]" | equals "Project Explorer" | verify-true
    get-property activePage | equals "Project Explorer" | verify-true
    get-property tabCount | equals 1 | verify-true
}
get-menu "File/New/Other..." | click
with [get-window New] {
    get-tree | select "ELT/ELT Project"
    get-button "Next >" | click
}
with [get-window "New ELT Project"] {
    get-editbox -after [get-label "Project name:"] | set-text Test
    get-button Finish | click
}
get-view "Project Explorer" | get-tree | select Test
get-view "Project Explorer" | get-tree | get-item Test | get-property caption | equals Test | verify-true
get-view "Project Explorer" | get-tree | select "Test/bin"
with [get-view "Project Explorer" | get-tree] {
    get-item "Test/bin" | get-property caption | equals bin | verify-true
    get-item "Test/lib" | get-property caption | equals lib | verify-true
    get-item "Test/scripts" | get-property caption | equals scripts | verify-true
    get-item "Test/src" | get-property caption | equals src | verify-true
    get-item "Test/xml" | get-property caption | equals xml | verify-true
}
get-view "Project Explorer" | get-tree | select Test | get-menu Delete | click
with [get-window "Delete Resources"] {
    get-button "Delete project contents on disk (cannot be undone)" | check
    get-button OK | click
}
