Content-Type: text/ecl
Entry-Name: .content

get-button "New (M1+N)" | click
with [get-window New] {
    get-tree | select "ETL/ETL Project"
    get-button "Next >" | click
}
with [get-window "New ETL Project"] {
    get-editbox -after [get-label "Project name:"] | set-text TestProj
    get-button Finish | click
}
get-button "New Graph (M1+M3+J)" | click
get-view "Project Explorer" | get-tree | select TestProj | get-menu Delete | click
with [get-window "Delete Resources"] {
    get-button "Delete project contents on disk (cannot be undone)" | check
    get-button OK | click
}


